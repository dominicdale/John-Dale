      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="loading">

    <header>
      <a href="/"><span class="logo">John Dale</span></a>
      <span class="menu">Menu</span>
    </header>

    <nav>
      <span class="menu">Menu</span>

      <a href="/"><span class="logo">John Dale</span></a>

      @Umbraco.RenderMacro("nav")

    </nav>

    <main>
      @RenderBody()
