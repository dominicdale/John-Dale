@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

@{
  var image = Umbraco.Media(CurrentPage.backgroundImage);
  <section class="homepage" style="background-image: url(@image.Url);">
    <div class="intro">
      <h1 class="title">@Umbraco.Field("title")</h1>
      <span class="tagline">@Umbraco.Field("contentArea")</span>
    </div>
  </section>
}
